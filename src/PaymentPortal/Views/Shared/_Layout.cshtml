@{
    HttpContext.Current.Response.Cache.SetExpires(DateTime.UtcNow.AddDays(-1));
    HttpContext.Current.Response.Cache.SetValidUntilExpires(false);
    HttpContext.Current.Response.Cache.SetRevalidation(HttpCacheRevalidation.AllCaches);
    HttpContext.Current.Response.Cache.SetCacheability(HttpCacheability.NoCache);
    HttpContext.Current.Response.Cache.SetNoStore();
}
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex,nofollow">
    <title>@(ViewBag.Title ?? ViewBag.FormTitle) - @(System.Configuration.ConfigurationManager.AppSettings["Organisation.ShortName"])</title>

    @Styles.Render("~/Content/css")

    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet" type="text/css" media="only screen">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">

    @Scripts.Render("~/bundles/GoogleAnalytics")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/accessible-autocomplete")

    <script type="text/javascript" language="javascript">
        rootUrl = "@Context.Request.Url.GetLeftPart(UriPartial.Authority)@Url.Content("~")";
    </script>
</head>

<body>
    <div class="container-fluid min-vh-100 p-0">
        <header role="banner" class="bg-black">
            <div class="d-flex" style="height:100px;">
                <div class="p-2 ps-4 text-light align-self-center flex-grow-1">@(System.Configuration.ConfigurationManager.AppSettings["Organisation.ShortName"])</div>
                <div class="p-2 pe-4 text-light align-self-center">@(System.Configuration.ConfigurationManager.AppSettings["Layout.Strapline"])</div>
            </div>
        </header>
        <main>
            <div class="container pt-4">
                <h1 class="mb-4">@ViewBag.FormTitle</h1>
                @RenderBody()
            </div>
        </main>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>