@model Admin.Models.Account.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

@{
    Layout = "~/Views/Account/_Layout.cshtml";
}

@section Messages {
    @Html.ValidationSummary(true, "Unable to process request:", new { @class = "ui error message" })
}

@section Header {
    <h1 class="ui header">
        @ViewBag.Title
    </h1>
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="ui form">

        <h2>Enter your email</h2>

        <div class="four wide field">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)
            <div class="form__element--error">
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>

        <div class="four wide field">
            <input type="submit" value="Email link" class="ui primary button" />
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
