@using Web.Mvc.Navigation;
@{
    HttpContext.Current.Response.Cache.SetExpires(DateTime.UtcNow.AddDays(-1));
    HttpContext.Current.Response.Cache.SetValidUntilExpires(false);
    HttpContext.Current.Response.Cache.SetRevalidation(HttpCacheRevalidation.AllCaches);
    HttpContext.Current.Response.Cache.SetCacheability(HttpCacheability.NoCache);
    HttpContext.Current.Response.Cache.SetNoStore();
}
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex,nofollow">
    <title>@(ViewBag.Title ?? ViewBag.FormTitle) - Income Management</title>
    <link rel="icon" href="@Url.Content("~/content/favicon.ico")" />

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    @Scripts.Render("~/bundles/lodash")
    @Scripts.Render("~/bundles/semantic")

    <script type="text/javascript" language="javascript">
            rootUrl = "@Context.Request.Url.GetLeftPart(UriPartial.Authority)@Url.Content("~")";
    </script>
</head>

<body cz-shortcut-listen="true">

    @{ Html.RenderPartial("_MainMenu"); }
    
    <div class="main" style="margin-left: 11rem;">
        
        <div class="nav" style="background-color: #fff; color: #333; box-shadow: rgba(0, 0, 0, 0.3) 0 0 1rem; padding: 1rem; z-index:2;">
            <div style="float: right;">
                <strong><i class="user icon"></i> @User.Identity.Name</strong>
                @if (HttpContext.Current.Request.Url.AbsoluteUri.Contains("//localhost"))
                {
                    <div class="environment environment--local">LOCAL</div>
                }
                else if (HttpContext.Current.Request.Url.AbsoluteUri.Contains("//intranetdev"))
                {
                    <div class="environment environment--dev">DEV</div>
                }
                else if (HttpContext.Current.Request.Url.AbsoluteUri.Contains("//intranettest"))
                {
                    <div class="environment environment--test">TEST</div>
                }
            </div>
            <div style="display:inline-block;">
            </div>
        </div>
        @{ Html.RenderAction("GetSystemMessages", "Home");}
        <div class="ui vertical segment" style="padding: 0 2rem; padding-bottom: 0; margin:2rem 0">
            <div>
                @RenderSection("Messages", required: false)
                <div class="inner-page">
                    <div class="introduction" style="margin-bottom: 1em;">
                        @RenderSection("Header", required: false)
                    </div>
                    <main>
                        <div>
                            @RenderBody()
                        </div>
                    </main>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/App/Core")
    @Scripts.Render("~/bundles/App/Shared")
    @RenderSection("scripts", required: false)
</body>
</html>px;