@model Admin.Models.ImportTypeImportProcessingRule.ListViewModel

@if (Model.Items != null && Model.Items.Any())
{
    <table class="ui celled table striped teal">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.ImportProcessingRule.Name
                    </td>
                    <td>
                        @item.ImportProcessingRule.Description
                    </td>
                    <td style="width:20%;">
                        @Html.ActionLink("Edit", "Edit", "ImportTypeImportProcessingRule", new { id = item.Id }, new { @class = "ui button" })
                        @Html.ActionLink("Delete", "Delete", "ImportTypeImportProcessingRule", new { id = item.Id, ImportTypeId = item.ImportTypeId }, new { @class = "ui button delete-import-type-import-processing-rule" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="ui info message">
        There are no linked import processing rules
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {

        $(".delete-import-type-import-processing-rule").on("click",
            function (e) {
                if (window.confirm("Are you sure you want to delete this link?")) {

                } else {
                    e.preventDefault();
                    e.stopPropogation();
                    return false;
                }
            });

    });
</script>
