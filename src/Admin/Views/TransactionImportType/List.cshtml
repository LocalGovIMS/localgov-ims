@using PagedList.Mvc

@model Admin.Models.TransactionImportType.ListViewModel
@{
    ViewBag.Title = "Transaction Import Types";
}


@section Header {
    <h1 class="ui header">
        Transaction import types
        @Html.ActionLink("Create type", "Create", new { }, new { @class = "ui blue button right floated" })
        <div class="sub header">
            Transaction import type management
        </div>
    </h1>
}

@Html.Partial("_Search", Model.SearchCriteria)

@if (Model.Items != null && Model.Items.Any())
{
    <table class="ui celled table striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    External reference
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.ExternalReference)
                    </td>
                    <td>
                        @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "ui button" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "ui button" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="7">
                    <div class="ui pagination menu">
                        @if (Model.Pages > 1)
                        {
                            @Html.PagedListPager(Model.Items, page => Url.Action("Search", new
                            {
                                page = page,
                                amount = Model.SearchCriteria.Name,
                                fundCode = Model.SearchCriteria.ExternalReference,
                            }))
                        }
                    </div>
                </th>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="ui info message">
        There are no transaction import types in the system
    </div>
}