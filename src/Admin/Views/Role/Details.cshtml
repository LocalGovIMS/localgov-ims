@model Admin.Models.Role.DetailsViewModel
@{
    ViewBag.Title = "Role";
}

@section Header { @Model.DisplayName }

@section Subheader { Role details }

@section Actions {
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-secondary" })
}

<div>
    @Html.HiddenFor(m => m.Id)

    <div class="mb-3">
        @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Name)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.DisplayName, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.DisplayName)
        </div>
    </div>

    @Html.ActionLink("Back", "Back", "Role", null, new { @class = "btn btn-secondary" })

</div>