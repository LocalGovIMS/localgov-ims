@model Admin.Models.VatMetadata.ListViewModel

@if (Model.Items != null && Model.Items.Any())
{
    <table class="ui celled table striped teal">
        <thead>
            <tr>
                <th>
                    Description
                </th>
                <th>
                    Value
                </th>
                <th>

                </th>
            </tr>
        </thead>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Value
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="ui info message">
        There is no metadata specified
    </div>
}

