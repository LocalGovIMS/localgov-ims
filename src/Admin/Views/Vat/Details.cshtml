@model Admin.Models.Vat.DetailsViewModel
@{
    ViewBag.Title = "VAT";
}

@section Header { @Model.Code }

@section Subheader { VAT details }

@section Actions {
    @Html.ActionLink("Edit", "Edit", new { id = Model.Code }, new { @class = "btn btn-secondary" })
}

<div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Code, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Code)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Percentage, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Percentage)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.IsDisabled, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Status)
        </div>
    </div>

    <div class="d-flex flex-wrap mb-3">
        <div class="me-auto p-0">
            <h1>
                Metadata
            </h1>
        </div>
    </div>

    <div class="mb-3">
        @Html.Action("_ListForVat", "VatMetadata", new { vatCode = Model.Code })
    </div>

    @Html.ActionLink("Back", "Back", "Vat", null, new { @class = "btn btn-secondary" })

</div>