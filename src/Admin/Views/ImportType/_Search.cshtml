@model Admin.Models.ImportType.SearchCriteria

@using (Html.BeginForm("Search", "ImportType", FormMethod.Get))
{

    <div class="ui segment">
        <div class="ui form">
            <div class="four fields">
                <div class="field">
                    @Html.LabelFor(m => m.DataType)
                    @Html.EnumDropDownListFor(m => m.DataType)
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { size = 50, placeholder = "Enter name" })
                </div>
                <div class="field">
                    @Html.LabelFor(m => m.ExternalReference)
                    @Html.TextBoxFor(m => m.ExternalReference, new { size = 50, placeholder = "Enter external reference" })
                </div>
                <div class="field">
                    <label>&nbsp;</label>
                    <button class="ui icon blue button" tabindex="0" type="submit">
                        <i class="search icon"></i> Search
                    </button>
                </div>
            </div>
        </div>
    </div>

}