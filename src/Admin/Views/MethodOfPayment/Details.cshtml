@model Admin.Models.MethodOfPayment.DetailsViewModel
@{
    ViewBag.Title = "MOP";
}

@section Header { @Model.Name }

@section Subheader { Method of Payment details }

@section Actions {
    @Html.ActionLink("Edit", "Edit", new { id = Model.Code }, new { @class = "btn btn-secondary" })
}

<div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Code, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Code)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Name)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.MaximumAmount, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.MaximumAmount)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.MinimumAmount, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.MinimumAmount)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.IsDisabled, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Status)
        </div>
    </div>

    <div class="mb-3">
        <h2>
            Metadata
        </h2>
        @Html.Action("_ListForMethodOfPayment", "MethodOfPaymentMetadata", new { mopCode = Model.Code })
    </div>


    @Html.ActionLink("Back", "Back", "MethodOfPayment", null, new { @class = "btn btn-secondary" })

</div>
