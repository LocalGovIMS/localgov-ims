@model Admin.Models.MethodOfPaymentMetadata.EditViewModel
@{
    ViewBag.Title = "Edit method of payment metadata";
}

@section Messages {
    @if (TempData.ContainsKey("Message") && TempData["Message"] != null) { Html.RenderPartial("_Message", TempData["Message"]); }
}

@section Header {
    <h1 class="ui header">
        Edit method of payment metadata
        <div class="sub header">
            Method of payment metadata details
        </div>
    </h1>
}

@using (Html.BeginForm("Edit", "MethodOfPaymentMetadata", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.MopCode)

    <div class="ui form">

        <div class="four wide field">
            @Html.LabelFor(m => m.MetadataKeyId)
            <div class="ui search selection dropdown keys-dropdown">
                @Html.HiddenFor(x => x.MetadataKeyId)
                <i class="dropdown icon"></i>
                <div class="default text no-overflow">Select key</div>
                <div class="menu">
                    @foreach (var item in Model.MetadataKeys.Items.OrderBy(x => x.Text))
                    {
                        <div class="item" data-value="@item.Value">
                            @item.Text
                        </div>
                    }
                </div>
            </div>
            <div class="form__element--error">
                @Html.ValidationMessageFor(m => m.MetadataKeyId)
            </div>
        </div>

        <div class="four wide field">
            @Html.LabelFor(m => m.Value)
            @Html.EditorFor(m => m.Value)
            <div class="form__element--error">
                @Html.ValidationMessageFor(m => m.Value)
            </div>
        </div>

        <input type="submit" value="Save" class="ui primary button" />
        @Html.ActionLink("Back", "Back", "MethodOfPaymentMetadata", null, new { @class = "ui button" })

    </div>

}

@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {

            $('.keys-dropdown').dropdown();

        });
    </script>

}