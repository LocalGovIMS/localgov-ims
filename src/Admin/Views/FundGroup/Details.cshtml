@model Admin.Models.FundGroup.DetailsViewModel
@{
    ViewBag.Title = "Fund group";
}

@section Header { @Model.FundGroupName }

@section Subheader { Fund group details }

@section Actions {
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-secondary" })
}

@Html.HiddenFor(m => m.Id)

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover mt-2">
        <thead>
            <tr>
                <th scope="col">
                    Funds
                </th>
            </tr>
        </thead>

        @if (Model.Funds != null && Model.Funds.Any())
        {
            foreach (var item in Model.Funds)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.FundCode)
                        @Html.Label(string.Format("{0} {1}", item.Fund.FundName, item.Fund.Disabled ? "(Disabled)" : string.Empty))
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    None specified
                </td>
            </tr>
        }
    </table>
</div>

@Html.ActionLink("Back", "Back", "FundGroup", null, new { @class = "btn btn-secondary" })
