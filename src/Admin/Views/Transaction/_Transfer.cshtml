@model Admin.Models.Transaction.TransferViewModel

@if (User.IsInRole(Role.TransactionJournal))
{
    <div id="transfer-dialog" class="ui modal">

        <div class="header">
            Create journal
        </div>

            <div class="ui info message" style="margin: 1rem;">
                <p>There is <strong>£<span id="amount-available-to-transfer">0</span></strong> available to journal</p>
            </div>

            <div class="ui error message transfer-message" style="margin: 1rem; display:none;">
                <div class="header transfer-message-header">Unable to add the journal</div>
                <p class="header transfer-message-text"></p>
            </div>

            <div class="content ui">

                <div class="ui form">
                    <div class="fields">

                        <div class="ui four wide field">
                            <label for="TransferItem_FundCode">Fund type</label>
                            <div class="ui fluid search selection dropdown js-fund">
                                @Html.Hidden("TransferItem_FundCode")
                                <i class="dropdown icon"></i>
                                <div class="default text no-overflow" style="width: 200px;">Select fund type</div>
                                <div class="menu">
                                    <div class="item" data-value="">
                                        None
                                    </div>
                                    @foreach (var item in Model.Funds.Items)
                                    {
                                        var dataAttributes = item.DataAttributes.Aggregate("", (current, attribute) => current + ("data-" + attribute.Key.ToLower() + "=" + attribute.Value + " "));
                                        <div class="item" data-value="@item.Value" @dataAttributes>
                                            @item.Text
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>



                        <div class="ui four wide field">
                            <label for="TransferItem_AccountReference">Account Reference</label>
                            @Html.TextBoxFor(m => m.TransferItem.AccountReference, new { @placeholder = "Enter account reference", @maxlength = 16 })
                            @Html.ValidationMessageFor(x => x.TransferItem.AccountReference)
                        </div>

                        <div class="ui four wide field">
                            <label for="TransferItem_VatCode">VAT code</label>
                            <div class="ui fluid search selection dropdown js-vat">
                                @Html.Hidden("TransferItem_VatCode")
                                <i class="dropdown icon"></i>
                                <div class="default text no-overflow" style="width: 100px;">Select VAT code</div>
                                <div class="menu">
                                    <div class="item" data-value="">
                                        VAT code
                                    </div>
                                    @foreach (var item in Model.VatCodes.Items)
                                    {
                                        <div class="item" data-value="@item.Value">
                                            @item.Text
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="ui four wide field">
                            <label for="TransferItem_Amount">Amount</label>
                            <div class="ui labeled input">
                                <label class="ui label" for="amount">£</label>
                                @Html.TextBoxFor(m => m.TransferItem.Amount, null, new { @placeholder = "0.00", @class = "monetary-amount" })
                                @Html.ValidationMessageFor(x => x.TransferItem.Amount)
                            </div>
                        </div>

                        <div class="ui four wide field">
                            <label for="TransferItem_Narrative">Narrative</label>
                            <div class="ui input">
                                @Html.TextBoxFor(m => m.TransferItem.Narrative, null, new { @placeholder = "Enter narrative" })
                                @Html.ValidationMessageFor(x => x.TransferItem.Narrative)
                            </div>
                        </div>

                        <div class="ui two wide field">
                            <label>&nbsp;</label>
                            <button class="ui right blue button add-transfer">
                                Add
                            </button>
                        </div>
                    </div>
                </div>
                <table id="transfer-table" class="ui celled table striped">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 10%;">Fund</th>
                            <th scope="col" style="width: 10%;">Account</th>
                            <th scope="col">Name</th>
                            <th scope="col">Balance</th>
                            <th scope="col" style="width: 10%;">VAT</th>
                            <th scope="col" style="width: 15%;">Amount (£)</th>
                            <th scope="col" style="width: 10%;">Narrative</th>
                            <th scope="col" style="width: 8%;"></th>
                        </tr>
                    </thead>
                    <tbody id="transfer-table-body"></tbody>
                </table>

            </div>

            <div class="actions">
                <div class="ui black deny button cancel-transfer">
                    Cancel
                </div>

                <button type="submit" class="ui positive right labeled icon button submit-transfer">
                    Submit journal
                    <i class="checkmark icon"></i>
                </button>
            </div>
    </div>
}
