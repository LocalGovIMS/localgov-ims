@model Admin.Models.Transaction.DetailsViewModel

<div class="table-responsive">
    <table class="table table-striped table-bordered mt-2 ui-payments-table">
        <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">Account</th>
                <th scope="col">Narrative</th>
                <th scope="col">VAT (£)</th>
                <th scope="col">Amount (£)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Transaction.CreditNotes)
            {
                <tr>
                    <td>@(item.Fund != null ? string.Format("{0} ({1})", item.Fund.FundName, item.Fund.FundCode) : "")</td>
                    <td>@item.AccountReference</td>
                    <td>@item.Narrative @item.AppReference</td>
                    <td class="text-end">@Html.ToCurrency(item.VatAmount) (@item.VatCode)</td>
                    <td class="text-end">@Html.ToCurrency(Math.Abs(item.Amount ?? 0))</td>
                </tr>
            }
        </tbody>
    </table>
</div>