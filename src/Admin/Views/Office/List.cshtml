@model IList<Admin.Models.Office.DetailsViewModel>
@{
    ViewBag.Title = "Office";
}

@section Header { Offices }

@section Subheader { Offices within the system }

@section Actions {
    @Html.ActionLink("Create office", "Create", new { }, new { @class = "btn btn-secondary" })
}

@if (Model != null)
{
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover mt-2">
        <thead>
            <tr>
                <th scope="col">
                    @Html.LabelFor(m => Model.FirstOrDefault().Code)
                </th>
                <th scope="col">
                    @Html.LabelFor(m => Model.FirstOrDefault().Name)
                </th>
                <th scope="col">

                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td class="text-end">
                    @Html.ActionLink("View", "Details", new { id = item.Code }, new { @class = "btn btn-secondary" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.Code }, new { @class = "btn btn-secondary" })
                </td>
            </tr>
        }
    </table>
</div>
}
else
{
    Html.RenderPartial("_NoResultsMessage", "offices");
}
