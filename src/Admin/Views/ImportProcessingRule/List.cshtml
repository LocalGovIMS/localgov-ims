@using PagedList.Mvc
@model Admin.Models.ImportProcessingRule.ListViewModel
@{
    ViewBag.Title = "Import processing rules";
}

@section Header {
    <h1 class="ui header">
        Import processing rules
        @Html.ActionLink("Create import processing rule", "Create", new { }, new { @class = "ui blue button right floated" })

        <div class="sub header">
            Import processing rule management
        </div>
    </h1>
}

@Html.Partial("_Search", Model.SearchCriteria)

@if (Model.Items != null && Model.Items.Any())
{
    <table class="ui celled table striped">
        <thead>
            <tr>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Description
                </th>
                <th scope="col">
                    Status
                </th>
                <th scope="col">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Description)
                    </td>
                    <td>
                        @Html.Label(item.Disabled ? "Disabled" : "Active")
                    </td>
                    <td>
                        @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "ui button" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "ui button" })
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    <div class="ui pagination menu">
                        @if (Model.Pages > 1)
                        {
                            @Html.PagedListPager(Model.Items, page => Url.Action("Search", new
                            {
                                page = page,
                                name = Model.SearchCriteria.Name
                            }))
                        }
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="ui info message">
        There are no rules in the system
    </div>
}

