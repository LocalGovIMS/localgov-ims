@{
    ViewBag.Title = "Unauthorised";
    Layout = "";
}

<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex,nofollow">
    <title>Error - Income Management System</title>

    <link rel="icon" href="@Url.Content("~/content/favicon.ico")" />

    @Styles.Render("~/Content/css")

</head>

<body>

    <div class="container-fluid min-vh-100">
        <div class="row row-cols-1 row-cols-lg-2 min-vh-100">

            <div class="col-12 col-lg-2 col-xxxl-1 gx-0 nav-bar-wrapper" style="background-color:black">
                <nav class="navbar navbar-dark bg-black" aria-label="Main menu">
                    <a class="navbar-brand ps-2" href="#">Local Gov IMS</a>
                </nav>
            </div>

            <div class="col-12 col-lg-10 col-xxxl-11">
                <main>
                    @if (Request.IsAuthenticated)
                    {
                        <div class="d-flex flex-wrap-reverse page-header">
                            <div class="me-auto pt-2 pe-2 pb-2">

                            </div>
                            <div class="order-lg-2 pt-2 pb-2">
                                @{ Html.RenderPartial("_Login"); }
                            </div>
                        </div>
                    }
                    <h1>
                        Error
                    </h1>
                    <div class="pt-2">
                        <div class="alert alert-danger my-3">
                            <div class="fw-bold mb-2">
                                We're sorry - an error has occurred
                            </div>
                            <p class="mb-2">
                                Please retry the action you were trying to perform.
                            </p>
                            <p class="mb-0">
                                If the error persists please contact your system administrator.
                            </p>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>
</body>
</html>