@model Admin.Models.Import.ListViewModel

@if (Model.Items != null && Model.Items.Any())
{
    <table class="table table-striped table-bordered table-hover mt-2">
        <thead>
            <tr>
                <th scope="col">
                    Type
                </th>
                <th scope="col">
                    Date
                </th>
                <th scope="col">
                    Number of rows
                </th>
                <th scope="col">
                    Status
                </th>
                @foreach(var metadata in Model.Items.First().Metadata)
                {
                    <th>@metadata.MetadataKey.Description</th>
                } 
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.ImportType.Name
                    </td>
                    <td>
                        @item.CreatedDate
                    </td>
                    <td>
                        @item.NumberOfRows
                    </td>
                    <td>
                        @item.CurrentStatus().GetDisplayName()
                        @if (item.HasErrors())
                        {
                            <br />
                            <span>(@item.Errors().Count()  @(item.Errors().Count() == 1 ? "error" : "errors"))</span>
                        }
                    </td>
                    @foreach (var metadata in item.Metadata)
                    {
                        <td>@metadata.Value</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="ui info message">
        There are no imports in the system
    </div>
}

