@model List<Admin.Models.Import.StatusHistoryViewModel>

@if (Model.Any())
{
    <table class="ui celled table striped teal">
        <thead>
            <tr>
                <th>
                    Created date
                </th>
                <th>
                    Created by
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CreatedByUserName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Status)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="ui info message">
        There is no status history to display
    </div>
}

