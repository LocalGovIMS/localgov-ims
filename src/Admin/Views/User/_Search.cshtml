@model Admin.Models.User.SearchCriteria

@using (Html.BeginForm("Search", "User", FormMethod.Get))
{

    <div>

        <div class="row">

            <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xxl-2">
                @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.UserName, new { size = 50, placeholder = "Enter username", @class = "form-control" })
            </div>

            <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xxl-2 pt-2 pt-sm-0">
                @Html.LabelFor(m => m.DisplayName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.DisplayName, new { size = 50, placeholder = "Enter display name", @class = "form-control" })
            </div>

            <div class="col-12 col-sm-6 col-md-4 col-lg-6 col-xxl-8 pt-3 offset-sm-6 offset-md-0 gap-2 d-flex align-self-end justify-content-end">
                <button class="btn btn-primary search" tabindex="0" type="submit">Search</button>
                <a href="@Url.Action("Search", "User")" class="btn btn-secondary" id="reset">Reset search</a>
            </div>

        </div>

    </div>

}