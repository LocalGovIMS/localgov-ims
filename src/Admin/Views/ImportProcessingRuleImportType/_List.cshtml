@model Admin.Models.ImportProcessingRuleImportType.ListViewModel
@if (Model.Items != null && Model.Items.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover mt-2">
            <thead>
                <tr>
                    <th scope="col">
                        Data type
                    </th>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        Description
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @(((ImportDataTypeEnum)item.ImportType.DataType).GetDisplayName())
                    </td>
                    <td>
                        @item.ImportType.Name
                    </td>
                    <td>
                        @item.ImportType.Description
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    Html.RenderPartial("_NothingSpecified", "linked import types");
}

