@model Admin.Models.ImportProcessingRuleImportType.ListViewModel

@if (Model.Items != null && Model.Items.Any())
{
    <table class="ui celled table striped teal">
        <thead>
            <tr>
                <th scope="col">
                    Data type
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Description
                </th>
            </tr>
        </thead>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @(((ImportDataTypeEnum)item.ImportType.DataType).GetDisplayName())
                </td>
                <td>
                    @item.ImportType.Name
                </td>
                <td>
                    @item.ImportType.Description
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="ui info message">
        There are no linked import types
    </div>
}

