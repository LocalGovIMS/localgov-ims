@model Admin.Models.MetadataKey.DetailsViewModel
@{
    ViewBag.Title = "Metadata key";
}


@section Header { @Model.Name }

@section Subheader { Metadata key details }

@section Actions {
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-secondary" })
}

<div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Name)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.Description)
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.IsASystemType, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Model.IsASystemType.ToYesNoString()
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.EntityType, new { @class = "form-label fw-bold" })
        <div class="form-label">
            @Html.DisplayFor(m => m.EntityType)
        </div>
    </div>

    @Html.ActionLink("Back", "Back", "MetadataKey", null, new { @class = "btn btn-secondary" })

</div>