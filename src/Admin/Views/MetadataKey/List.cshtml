@using PagedList.Mvc


@model Admin.Models.MetadataKey.ListViewModel
@{
    ViewBag.Title = "Metadata keys";
}

@section Header {
    <h1 class="ui header">
        Metadata keys
        @Html.ActionLink("Create metadata key", "Create", new { }, new { @class = "ui blue button right floated" })
        <div class="sub header">
            Metadata key management
        </div>
    </h1>
}

@Html.Partial("_Search", Model.SearchCriteria)

@if (Model.Items != null && Model.Items.Any())
{
    <table class="ui celled table striped">
        <thead>
            <tr>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Description
                </th>
                <th scope="col">
                    Is a system type
                </th>
                <th scope="col">
                    Entity type
                </th>
                <th scope="col">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items.OrderBy(x => x.Name))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Description)
                    </td>
                    <td>
                        @item.SystemType.ToYesNoString()
                    </td>
                    <td>
                        @(((MetadataKeyEntityType)item.EntityType).GetDisplayName())
                    </td>
                    <td>
                        @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "ui button" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "ui button" })
                        @if (!item.SystemType)
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "ui button delete-action" })
                        }
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">
                    <div class="ui pagination menu">
                        @if (Model.Pages > 1)
                        {
                            @Html.PagedListPager(Model.Items, page => Url.Action("Search", new
                        {
                            page = page,
                            name = Model.SearchCriteria.Name,
                            entityType = Model.SearchCriteria.EntityType,
                        }))
                        }
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <div class="ui info message">
        There are no metadata keys in the system
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $('.ui.dropdown').dropdown({
            match: 'both'
        });

        $(document).ready(function () {

            $(".delete-action").on("click",
                function (e) {
                    if (window.confirm("Are you sure you want to delete this metadata key?")) {

                    } else {
                        e.preventDefault();
                        e.stopPropogation();
                        return false;
                    }
                });

        });
    </script>
}

