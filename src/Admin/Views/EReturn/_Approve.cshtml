@if (User.IsInRole(Role.EReturnAuthoriser))
{
    <div class="modal fade modal-lg" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="approveModalLabel">Approve eReturns</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="alert alert-info mb-0">
                            <p>You are approving <strong>£<span id="amount-to-approve">0</span></strong> worth of eReturns</p>
                        </div>
                    </div>

                    <div class="approve-message" style="display:none;">
                        <div class="alert alert-danger mb-0">
                            <div class="header">
                                Unable to approve the selected eReturn(s)
                            </div>
                            <p class="header approve-message-text"></p>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover mt-2" id="approve-table">
                            <thead>
                                <tr>
                                    <th scope="col" style="width: 10%;">eReturn number</th>
                                    <th scope="col" style="width: 20%;">Template</th>
                                    <th scope="col" style="width: 20%;">Submitted by</th>
                                    <th scope="col" style="width: 10%;">Type</th>
                                    <th scope="col">Amount (£)</th>
                                    <th scope="col" style="width: 10%;"><span class="visually-hidden">Actions</span></th>
                                </tr>
                            </thead>
                            <tbody id="approve-table-body"></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary submit-approve one-click-submit-button">Approve eReturn(s)</button>
                </div>
            </div>
        </div>
    </div>
}
