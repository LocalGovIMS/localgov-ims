@if (User.IsInRole(Role.EReturnAuthoriser))
{
    <div id="approve-dialog" class="ui modal">

        <div class="header">
            Approve eReturns
        </div>

        <div class="ui info message" style="margin: 1rem;">
            <p>You are approving <strong>£<span id="amount-to-approve">0</span></strong> worth of eReturns</p>
        </div>

        <div class="ui error message approve-message" style="margin: 1rem; display:none;">
            <div class="header approve-message-header">Unable to approve the selected eReturn(s)</div>
            <p class="header approve-message-text"></p>
        </div>
        <div class="content ui">

            <table id="approve-table" class="ui celled table striped">
                <thead>
                    <tr>
                        <th scope="col" style="width: 10%;">EReturn number</th>
                        <th scope="col" style="width: 20%;">Template</th>
                        <th scope="col" style="width: 20%;">Submitted by</th>
                        <th scope="col" style="width: 10%;">Type</th>
                        <th scope="col">Amount (£)</th>
                        <th scope="col" style="width: 10%;"></th>
                    </tr>
                </thead>
                <tbody id="approve-table-body"></tbody>
            </table>

        </div>

        <div class="actions">
            <div class="ui black deny button cancel-approve">
                Cancel
            </div>

            <button type="submit" class="ui positive right labeled icon button submit-approve">
                Approve eReturns
                <i class="checkmark icon"></i>
            </button>
        </div>
    </div>
}
